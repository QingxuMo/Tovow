#!/data/data/com.termux/files/usr/bin/sh
name="Tovow"
tiviw_ver=0.1

echo "校验脚本中…"
if [ ! -f "$PREFIX/etc/tiviw/branch" ]; then
	branch="master"
else
	branch=$(cat $PREFIX/etc/tiviw/branch)
fi
if [ ! -d "$PREFIX/etc/tiviw/main" ]; then
	echo "初始化脚本……"
	mkdir -p $PREFIX/etc/tiviw/
	git clone https://github.com/QingxuMo/$name $PREFIX/etc/tiviw/main >/dev/null
fi

if [ ! -d "$PREFIX/etc/tiviw/main" ]; then
	git clone https://github.com/QingxuMo/$name $PREFIX/etc/tiviw/main >/dev/null
fi

if [ ! -f "$PREFIX/bin/bash" ]; then
	pkg in bash -y >/dev/null
fi

if [ ! -f "$PREFIX/etc/tiviw/main/script/menu.sh" ]; then
	echo "请检查您的互联网连接状态，如互联网连接正常，请向开发者提交 issues"
	exit 1
fi

echo "校验完毕，请回车以启动脚本！"
bash $PREFIX/etc/tiviw/main/script/menu.sh
